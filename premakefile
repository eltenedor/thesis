INCLUDES := -I/usr/include/opencascade

LIBS := -lTKBinXCAF -lTKIGES -lTKSTEP -lTKSTEP209 -lTKSTEPAttr -lTKSTEPBase -lTKSTL -lTKVRML -lTKXCAF -lTKXCAFSchema -lTKXDEIGES -lTKXDESTEP -lTKXSBase -lTKXmlXCAF
#LIBS := -lTKAdvTools -lTKBinL -lTKBin -lTKBinTObj -lTKBinXCAF -lTKBool -lTKBO -lTKBRep -lTKCAF -lTKCDF -lTKernel -lTKFeat -lTKFillet -lTKG2d -lTKG3d -lTKGeomAlgo -lTKGeomBase -lTKHLR -lTKIGES -lTKLCAF -lTKMath -lTKMesh -lTKMeshVS -lTKNIS -lTKOffset -lTKOpenGl -lTKPCAF -lTKPLCAF -lTKPrim -lTKPShape -lTKService -lTKShapeSchema -lTKShHealing -lTKStdLSchema -lTKStdSchema -lTKSTEP209 -lTKSTEPAttr -lTKSTEPBase -lTKSTEP -lTKSTL -lTKTObj -lTKTopAlgo -lTKV2d -lTKV3d -lTKVRML -lTKXCAFSchema -lTKXCAF -lTKXDEIGES -lTKXDESTEP -lTKXMesh -lTKXmlL -lTKXml -lTKXmlTObj -lTKXmlXCAF -lTKXSBase

CFORT := gfortran
CFORTFLAGS := -c -Wall -Wno-unused-variable

CCPP := g++
CCPPFLAGS := -c -Wall -Wno-unused-variable

DPATH := ../order_verification/blockStructured/test/

OBJS := \
	$(DPATH)parameterModule.o \
	boundaryModule.o \
	charModule.o \
	geoModule.o \
	controlModule.o \
	indexModule.o \
	occtFunc.o \
	preprocessing.o \


all: preprocessing

preprocessing: $(OBJS)
	@echo
	@echo 'Invoking Fortran Linker'
	$(CFORT) $^ -o $(DPATH)$@ $(LIBS)
	@rm -rf *.o *.mod $(DPATH)*.o $(DPATH)*.mod
	@echo
	@echo 'DONE'
	
%.o: %.cpp
	@echo
	@echo 'Invoking C++ Compiler'
	$(CCPP) $(CCPPFLAGS) $(INCLUDES) $< -o $@
	
%.o: %.f90
	@echo
	@echo 'Invoking Fortran Compiler'
	$(CFORT) $(CFORTFLAGS) $< -o $@

clean:
	rm -rf *.o *.mod

