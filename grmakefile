INCLUDES :=
LIBS :=

CFORT := gfortran
CFORTFLAGS := -c -Wall -Wno-unused-variable

CCPP := g++
CCPPFLAGS := -c -Wall -Wno-unused-variable

DPATH := ../order_verification/blockStructured/test/

OBJS := \
	parameterModule.o \
	boundaryModule.o \
	charModule.o \
	geoModule.o \
	indexModule.o \
	grgen.o \
	
all: grgen

grgen: $(OBJS)
	@echo
	@echo 'Invoking Fortran Linker'
	$(CFORT) $^ -o $(DPATH)$@ $(LIBS)
	@rm -rf *.o *.mod
	@echo
	@echo 'DONE'

#normal rule (Modules)
%.o: %.F90
	@echo
	@echo 'Invoking Fortran Compiler'
	$(CFORT) $(CFORTFLAGS) $< -o $@
	
clean:
	rm -rf *.o *.mod

